<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.miniproj">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Miniproj">
        <activity
            android:name=".activities.DetailsActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Miniproj.NoActionBar"/>
        <activity
            android:name=".activities.RecordActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Miniproj.NoActionBar" />
        <activity
            android:name=".activities.RecordBlockActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Miniproj.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.MyPatientsActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Miniproj.NoActionBar" />
        <activity
            android:name=".activities.PatientActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Miniproj.NoActionBar" />
        <activity
            android:name=".activities.DoctorActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Miniproj.NoActionBar" />
        <activity
            android:name=".activities.SignUpActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Miniproj.NoActionBar" />
        <activity
            android:name=".activities.SignInActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Miniproj.NoActionBar" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Miniproj.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>